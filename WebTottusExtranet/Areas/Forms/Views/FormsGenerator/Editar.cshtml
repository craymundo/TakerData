

@{
    ViewData["Title"] = "Editar Formularios";
    Layout = "~/Views/Shared/_LayoutExtranet.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Editar de Formularios</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Formularios</strong>
            </li>
        </ol>
    </div>

</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row" style="padding-bottom:1%">
        <div class="col-md-12 text-right">
            <button id="btnRegistrar" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false">Agregar Nuevo</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Formularios Registrados</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table style="width:100%;" class="table table-striped table-bordered table-hover " id="tblforms"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="myModalEliminar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <form id="modal-form-eliminar" method="post" role="form">
                <div class="modal-header" style="background-color:#f4f9ec;border-bottom:none!important">
                    <h4  class="modal-title">Eliminar Formulario</h4>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <p>Desea eliminar el formulario seleccionado?</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white btn-lg" style="width:155px" data-dismiss="modal">No,Cancelar</button>
                    <input type="button" class="btn btn-primary btn-lg" id="btnEliminar" value="Eliminar">
                </div>
            </form>
        </div>
    </div>
</div>

<input type="hidden" id="hddidform" name="hddidform" />

<environment names="Development">
    <script type="text/javascript" src="~/bundle/js/formsedit.js"></script>
</environment>
<environment names="Production">
    <script type="text/javascript" src="~/bundle/js/formsedit.js"></script>
</environment>