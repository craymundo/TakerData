

@{
    ViewData["Title"] = "Invitación de Formularios";
    Layout = "~/Views/Shared/_LayoutExtranet.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Invitación de Formularios</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Home/Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Envió de Invitación de Formularios</strong>
            </li>
        </ol>
    </div>

</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Envió de Invitación de Formularios</h5>
                </div>
                <div class="ibox-content">

                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-group  row">
                                <label class="col-sm-2 col-form-label">Formularios:</label>

                                <div class="col-sm-10">

                                    <select id="cmbForm" name="cmbForm" class="form-control">
                                       
                                    </select>

                                </div>
                            </div>


                            <div class="form-group  row">
                                <label class="col-sm-2 col-form-label">Base de Datos:</label>

                                <div class="col-sm-10">

                                    <select id="cmbBD" name="cmbBD" class="form-control">
                                     
                                    </select>

                                </div>
                            </div>


                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table style="width:100%;" class="table table-striped table-bordered table-hover " id="tblBD"></table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <input type="button" class="btn btn-lg btn-success float-right" value="Enviar Invitaciones" id="btnEnviar" />
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hddidusuario" name="hddidusuario" value="@ViewBag.IdUsuario" readonly="readonly" disabled="disabled" />
<input type="hidden" id="hddidempresa" name="hddidempresa" value="@ViewBag.IdEmpresa" readonly="readonly" disabled="disabled" />


<environment names="Development">

    <script src="~/bundle/js/formsinvitationsend.js"></script>
</environment>
<environment names="Production">

    <script src="~/bundle/js/formsinvitationsend.js"></script>
</environment>