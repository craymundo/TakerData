<input type="hidden" id="hddTipoPregunta" name="hddTipoPregunta" />

<div class="modal" id="myModalVer" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h4 class="modal-title text-center">Detalle de Pregunta</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label class="control-label" for="lblPregunta"><strong>Pregunta</strong></label>
                        <input type="text" id="txtPregunta" name="txtPregunta" placeholder="Escriba su Pregunta" class="form-control" autocomplete="off" />
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 div_opciones" id="div_opciones_1">
                    <div class="form-group">
                        <a href='#' class='btn btn-success btn-bitbucket btn-li-edit' id="btnAgregarOpcion"><i class='fa fa-plus'></i>Agregar Opciones</a>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 div_opciones" id="div_opciones_2">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" name="txtopciones[]" class="form-control" autocomplete="off"  />
                        </div>
                        <div class="col-sm-2">
                            &nbsp;
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12" id="div_respuesta">
                    <div class="form-group">
                        <label class="control-label" for="lblPregunta"><strong>Respuesta</strong></label>
                        <input type="text" id="txtRespuesta" name="txtRespuesta" placeholder="Escriba su Respuesta" class="form-control" autocomplete="off" readonly />
                    </div>
                </div>

                <div class="col-md-12 col-sm-12" id="div_tipo_respuestas">
                    <div class="form-group">
                        <label class="control-label" for="lblPregunta"><strong> Tipo Respuesta</strong></label>

                        <select class="form-control" id="cmbTipoRspta" name="cmbTipoRspta">
                            <option value="0">-Seleccione-</option>
                            <option value="1">Una Respuesta</option>
                            <option value="2">Varias Respuestas</option>
                            <option value="3">Menu Desplegable</option>

                        </select>


                    </div>
                </div>

                <div class="col-md-12 col-sm-12" id="div_calificacion">

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="control-label" for="lblPregunta"><strong>Niveles</strong></label>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label" for="lblPregunta"><strong>Simbolo</strong></label>
                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" id="cmbNiveles" name="cmbNiveles">
                                <option value="0">-Seleccione-</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" id="cmbSimbolo" name="cmbSimbolo">
                                <option value="0">-Seleccione-</option>
                                <option value="1">Numero</option>
                                <option value="2">Estrella</option>

                            </select>
                        </div>
                    </div>

                </div>

                <div class="col-md-12 col-sm-12">

                    <div class="form-group row">
                        <div class="col-sm-6" id="div_rspt_larga_1">
                            <label class="control-label" for="lblPregunta"><strong>Respuesta Larga</strong></label>
                        </div>
                        <div class="col-sm-6">
                            <label class="control-label" for="lblPregunta"><strong>Respuesta Obligatoria</strong></label>
                        </div>
                        <div class="col-sm-6" id="div_rspt_larga_2">
                            <div class="checkbox-inline i-checks"><label> <input type="radio" checked="checked" value="1" name="rdbRsptaLarga"> <i></i> Si </label></div>
                            <div class="i-checks"><label> <input type="radio" value="0" name="rdbRsptaLarga"> <i></i> No </label></div>
                        </div>
                        <div class="col-sm-6">
                            <div class="checkbox-inline i-checks"><label> <input type="radio" checked="" value="1" name="rdbRsptaObg"> <i></i> Si </label></div>
                            <div class="i-checks"><label> <input type="radio" value="0" name="rdbRsptaObg"> <i></i> No </label></div>
                        </div>
                    </div>

                </div>

                <div class="col-md-12 col-sm-12" id="div_restricciones">
                    <div class="form-group">
                        <label class="control-label" for="lblPregunta"><strong>Restricciones</strong></label>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <select class="form-control" id="cmbrestriccion" name="cmbrestriccion">
                                    <option value="0">-Seleccione-</option>
                                    <option value="1">Número</option>
                                    <option value="2">Mayor que</option>
                                    <option value="3">Mayor que o igual a</option>
                                    <option value="4">Menor que</option>
                                    <option value="5">Menor que o igual a</option>
                                    <option value="6">Igual a</option>
                                    <option value="7">Que no sea igual a</option>
                                    <option value="8">Entre</option>
                                    <option value="9">Que no esté comprendido entre</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" id="txtvalor1" name="txtRespuesta" class="form-control" autocomplete="off" />
                            </div>

                            <div class="col-sm-3">
                                <input type="text" id="txtvalor2" name="txtRespuesta" class="form-control" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white btn-lg btnPanel" data-dismiss="modal">Close</button>

                <input type="button" class="btn btn-success btn-lg" id="btnGuardarControl" name="btnGuardarControl" value="Guardar" />
            </div>
        </div>
    </div>
</div>

